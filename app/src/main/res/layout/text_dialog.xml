<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bluetooth_message"
    android:layout_width="220dp"
    android:layout_height="220dp"
    android:background="@drawable/duihuakuang1">

    <EditText
        android:id="@+id/input_text"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@null"
        android:editable="true"
        android:hint="你想说的话..."
        android:maxLines="5"
        android:paddingLeft="30dp"
        android:paddingTop="20dp"
        android:scrollbars="vertical"
        android:textColor="#000000"
        android:textSize="15dip"></EditText>

    <TextView
        android:id="@+id/send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/input_text"
        android:layout_marginBottom="14dp"
        android:layout_toRightOf="@+id/input_text"
        android:clickable="true"
        android:text="发送"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/quit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/send"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:clickable="true"
        android:text="X"
        android:textColor="#000000" />

</RelativeLayout>
