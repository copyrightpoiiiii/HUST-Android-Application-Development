<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/message_window_layout"
    android:layout_width="225dp"
    android:layout_height="220dp"
    android:background="@drawable/duihuakuang1"
    android:orientation="vertical">

    <TextView
        android:id="@+id/inform_text"
        android:layout_width="170dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="37dp"
        android:singleLine="false"
        android:text="helloWorld"
        android:textColor="#000000"
        android:textSize="15.0dip" />

    <Button
        android:id="@+id/inform_cancel"
        android:layout_width="55dp"
        android:layout_height="25dp"
        android:layout_alignBaseline="@+id/inform_ok"
        android:layout_alignRight="@+id/inform_text"
        android:layout_alignBottom="@+id/inform_ok"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/yexukuang"
        android:text="忽略"
        android:textColor="#000000" />

    <Button
        android:id="@+id/inform_ok"
        android:layout_width="55dp"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:layout_toLeftOf="@+id/inform_cancel"
        android:background="@drawable/yexukuang"
        android:text="查看"
        android:textColor="#000000" />

</RelativeLayout>