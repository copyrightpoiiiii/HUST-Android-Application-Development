<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/message_window_layout"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:background="@drawable/infopush_dialog_up"
    android:orientation="vertical">

    <TextView
        android:id="@+id/inform_text"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="49dp"
        android:singleLine="false"
        android:text="helloWorld"
        android:textColor="#ff00ff"
        android:textSize="15.0dip" />

    <Button
        android:id="@+id/inform_cancel"
        android:layout_width="65dp"
        android:layout_height="30dp"
        android:layout_alignBaseline="@+id/inform_ok"
        android:layout_alignRight="@+id/inform_text"
        android:layout_alignBottom="@+id/inform_ok"
        android:background="@drawable/button_green_big"
        android:text="忽略"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/inform_ok"
        android:layout_width="65dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="55dp"
        android:layout_toLeftOf="@+id/inform_cancel"
        android:background="@drawable/button_green_big"
        android:text="查看"
        android:textColor="#ffffff" />

</RelativeLayout>